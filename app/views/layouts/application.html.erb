  <body>
    <%= render 'nav/main', style: 'text-decoration-none text-light btn rounded border border-light' %>
    <main class="container">
      <p class=""><%= notice %></p>
      <p class=""><%= alert %></p>
      <%= yield %>
    </main>
  </body>
</html>
